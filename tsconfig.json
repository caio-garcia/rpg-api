{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "dist",
      "esModuleInterop": true,
          "types": ["node"],
      "typeRoots": ["./types", "@types", "node_modules/@types"],
      "strict": true,
      "skipLibCheck": true,
      "strictNullChecks": true
    },
    "exclude": ["node_modules", "./*.ts", "__test__"]
}